{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es6",
        "outDir": "dist",
        "module": "commonjs",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "config/*": ["config/*"],
            "package.json": ["package.json"],
            "*": ["src/*"]
        }
    },
    "exclude": ["node_modules"]
}
