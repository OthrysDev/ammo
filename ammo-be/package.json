    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "2.1.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@types/jest": "^26.0.15",
    "babel-jest": "^26.6.3",
    "express": "^4.17.1",
    "joi": "^17.3.0",
    "nodemon": "^2.0.6",
